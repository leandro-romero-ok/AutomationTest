{
  "src_folders": ["./guideDemo/groups"],
  "output_folder": "./reports",
  "globals_path": "./guideDemo/globals.js",
  "page_objects_path": "./guideDemo/pages",
  "test_workers": {
    "enabled": false,
    "workers": "auto"
  },
  "live_output": false,

  "selenium": {
    "start_process": true,
    "host" : "127.0.0.1",
    "port" : 4444,
    "server_path": "./node_modules/selenium-standalone/.selenium/selenium-server/3.141.0-server.jar",
    "log_path": "",
    "cli_args": {
      "webdriver.chrome.driver": "./node_modules/selenium-standalone/.selenium/chromedriver/2.43-x64-chromedriver"
    }
  },

  "test_settings": {
    "default": {
      "skip_testcases_on_fail": true,
      "silent": true,
      "screenshots": {
        "enabled": true,
        "on_failure": false,
        "on_error": false,
        "path": "./tests/screenshots"
      },
      "disable_colors": true,
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled" : true
      }
    },

    "xvfb_desktop": {
      "selenium_host": "localhost",
      "selenium_port": 4444,
      "skip_testcases_on_fail": true,
      "screenshots": {
        "enabled": false,
        "on_failure": false,
        "on_error": false,
        "path": "./tests/screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled" : true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "args": [
            "incognito",
            "disable-extensions",
            "--no-sandbox"
          ]
        }
      }
    },

    "xvfb_mobile": {
      "selenium_host": "localhost",
      "selenium_port": 4444,
      "skip_testcases_on_fail": true,
      "screenshots": {
        "enabled": false,
        "on_failure": false,
        "on_error": false,
        "path": "./tests/screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled" : true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "mobileEmulation": {
            "deviceName": "Nexus 5"
          },
          "args": [
            "incognito",
            "disable-extensions",
            "--no-sandbox",
            "disable-gpu"
          ]
        }
      }
    }
  }
}